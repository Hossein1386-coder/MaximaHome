@{
    ViewData["Title"] = "رزرو وقت | ماکسیما هوم";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="pwa-card app-fade-in">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="d-flex align-items-center">
                            <span class="pwa-chip ml-2">Appointment Booking</span>
                            <h3 class="mb-0">رزرو وقت تعمیر</h3>
                        </div>
                        <a href="tel:09140748037" class="btn pwa-cta">تماس</a>
                    </div>
                    <div class="card-body p-0">
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">
                                @ViewBag.Success
                            </div>
                        }

                        <form class="app-form" method="post" action="@Url.Action("Book", "Booking")">
                            <div class="form-group mb-3">
                                <label for="name">نام و نام خانوادگی</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>

                            <div class="form-group mb-3">
                                <label for="phone">شماره تماس</label>
                                <input type="tel" class="form-control" id="phone" name="phone" required>
                            </div>

                            <div class="form-group mb-3">
                                <label for="carModel">مدل خودرو</label>
                                <select class="form-control" id="carModel" name="carModel" required>
                                    <option value="">انتخاب کنید</option>
                                    <optgroup label="تویوتا">
                                        <option value="prius">تویوتا پریوس</option>
                                        <option value="camry">تویوتا کمری</option>
                                        <option value="corolla">تویوتا کرولا</option>
                                        <option value="rav4">تویوتا راو4</option>
                                        <option value="highlander">تویوتا هایلندر</option>
                                        <option value="landcruiser">تویوتا لندکروزر</option>
                                    </optgroup>
                                    <optgroup label="نیسان">
                                        <option value="xtrail">نیسان ایکس-تریل</option>
                                        <option value="maxima">نیسان ماکسیما</option>
                                        <option value="qashqai">نیسان قشقایی</option>
                                        <option value="juke">نیسان جوک</option>
                                        <option value="patrol">نیسان پاترول</option>
                                        <option value="leaf">نیسان لیف</option>
                                    </optgroup>
                                    <optgroup label="خودروهای چینی">
                                        <option value="chery">چری تیگو 7</option>
                                        <option value="jac">جک S5</option>
                                        <option value="lifan">لیفان X60</option>
                                        <option value="mvm">ام وی ام X33</option>
                                        <option value="geely">جیلی امگرند</option>
                                        <option value="baic">بایک B30</option>
                                    </optgroup>
                                </select>
                            </div>

                            <div class="form-group mb-3">
                                <label for="serviceType">نوع خدمت</label>
                                <select class="form-control" id="serviceType" name="serviceType" required>
                                    <option value="">انتخاب کنید</option>
                                    <option value="engine">تعمیر موتور</option>
                                    <option value="transmission">تعمیر گیربکس</option>
                                    <option value="electrical">تعمیرات برقی</option>
                                    <option value="suspension">تعمیر سیستم تعلیق</option>
                                    <option value="brake">تعمیر ترمز</option>
                                    <option value="other">سایر خدمات</option>
                                </select>
                            </div>

                            <div class="row">
                                <div class="col-md-7 mb-3">
                                    <label class="d-block">تاریخ مراجعه</label>
                                    <div class="pwa-card">
                                        <div class="calendar-grid mb-2 text-muted">
                                            <div>ش</div><div>ی</div><div>د</div><div>س</div><div>چ</div><div>پ</div><div>ج</div>
                                        </div>
                                        <div id="calendar" class="calendar-grid"></div>
                                    </div>
                                    <input type="hidden" id="date" name="date" required>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group mb-3">
                                        <label for="time">ساعت مراجعه</label>
                                        <select class="form-control" id="time" name="time" required>
                                            <option value="">انتخاب کنید</option>
                                            <option value="09:00">09:00</option>
                                            <option value="10:00">10:00</option>
                                            <option value="11:00">11:00</option>
                                            <option value="12:00">12:00</option>
                                            <option value="14:00">14:00</option>
                                            <option value="15:00">15:00</option>
                                            <option value="16:00">16:00</option>
                                            <option value="17:00">17:00</option>
                                        </select>
                                    </div>
                                    <div class="pwa-card mt-4">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="pwa-chip ml-2">سرویس‌های محبوب</span>
                                        </div>
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-2">• تنظیم موتور</li>
                                            <li class="mb-2">• سرویس دوره‌ای</li>
                                            <li>• عیب‌یابی برقی</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label for="description">توضیحات</label>
                                <textarea class="form-control" id="description" name="description" rows="4" placeholder="لطفاً مشکل خودرو و توضیحات تکمیلی را وارد کنید"></textarea>
                            </div>

                            <div class="text-center mt-3">
                                <button type="submit" class="btn pwa-cta btn-lg">ثبت درخواست رزرو</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .form-control { border-radius: 10px; }
    .alert-success { background-color: #11351f; border-color: #1d5b33; color: #9fe4b7; }
</style>

<script>
    (function(){
        // تقویم ساده ماه جاری
        var today = new Date();
        var year = today.getFullYear();
        var month = today.getMonth();
        var firstDay = new Date(year, month, 1);
        var startWeekday = (firstDay.getDay() + 1) % 7; // هفته از شنبه
        var daysInMonth = new Date(year, month + 1, 0).getDate();
        var grid = document.getElementById('calendar');
        var selectedEl = null;
        for (var i = 0; i < startWeekday; i++) {
            var pad = document.createElement('div');
            grid.appendChild(pad);
        }
        for (var d = 1; d <= daysInMonth; d++) {
            var cell = document.createElement('button');
            cell.type = 'button';
            cell.className = 'calendar-day';
            cell.textContent = d;
            cell.addEventListener('click', function(e){
                if (selectedEl) selectedEl.classList.remove('active');
                e.currentTarget.classList.add('active');
                var chosen = new Date(year, month, parseInt(e.currentTarget.textContent, 10));
                document.getElementById('date').value = chosen.toISOString().split('T')[0];
            });
            grid.appendChild(cell);
        }
    })();
</script> 